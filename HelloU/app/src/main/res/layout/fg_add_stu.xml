<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="账号"/>

        <EditText
            android:id="@+id/add_user_no_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="输入学生学号"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:layout_marginLeft="4dp"
            android:inputType="number" />

        <Spinner
            android:id="@+id/spinner_user_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/data"
            android:prompt="@string/spin_title"
            android:layout_gravity="center"
            android:spinnerMode="dialog" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" 姓名"
            android:layout_marginTop="12dp"
            android:layout_weight="4"  />

        <EditText
            android:id="@+id/add_user_name_edit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="输入姓名"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rounded_edittext"
            android:layout_weight="1"
            android:inputType="text" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_height="40dp"
            android:text="密码"/>

        <EditText
            android:id="@+id/add_user_pwd_edit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="输入用户密码"
            android:layout_marginLeft="8dp"
            android:background="@drawable/rounded_edittext"
            android:layout_weight="1"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/add_user_pwd_again_edit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:hint="再次输入密码"
            android:layout_marginLeft="8dp"
            android:background="@drawable/rounded_edittext"
            android:inputType="textPassword" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="性别"
            android:layout_weight="4"  />


        <RadioGroup
            android:id="@+id/genderRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/btnMan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="火星帅哥"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/btnWoman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="金星美女"/>
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="手机"
            android:layout_marginTop="12dp"
            android:layout_weight="4"  />

        <EditText
            android:id="@+id/add_user_tel_edit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:hint=" (*)输入手机号"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rounded_edittext"
            android:layout_weight="1"
            android:inputType="phone" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="地址"
            android:layout_marginTop="12dp"
            android:layout_weight="4"  />

        <EditText
            android:id="@+id/add_user_address_edit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint=" (*)输入地址"
            android:layout_gravity="center"
            android:background="@drawable/rounded_edittext"
            android:layout_weight="1"
            android:inputType="text" />

    </LinearLayout>


    <Button
        android:id="@+id/add_user_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_button_height"
        android:text="新增该学生"
        android:layout_marginTop="30dp"
        android:background="#ff336699"
        android:textColor="@android:color/white"
        />

</LinearLayout>