<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.luo_0412.learnmore">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity"></activity>
        <activity android:name=".BroadcastTest1Activity"></activity>
        <activity android:name=".BroadcastOfflineActivity"></activity>
        <activity android:name=".FilePersistenceActivity"></activity>
        <activity android:name=".SharedPreferencesActivity"></activity>
        <activity android:name=".SQLiteActivity"></activity>

        <receiver android:name=".BootCompleteReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <receiver android:name=".MyBroadcastReceiver">
            <intent-filter>
                <action android:name="com.example.luo_0412.learnmore.MY_BROADCAST"/>
            </intent-filter>
        </receiver>
        <receiver android:name=".ForceOfflineReceiver" >
            <intent-filter>
                <action android:name="com.example.luo_0412.learnmore.FORCE_OFFLINE" />
            </intent-filter>
        </receiver>

    </application>

</manifest>